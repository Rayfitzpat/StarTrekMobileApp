<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    tools:context="com.example.startrekassignment.NCC1701F">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uss_enterprise_ncc_1701_f" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NCC-1701-F"
                android:textColor="#F3F0F0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registry: USS Enterprise (NCC-1701-F)"
                android:textColor="#F8F5F5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: Odyssey     Service: 2409â€“ongoing"
                android:textColor="#F4F2F2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Captain: Va'Kel Shon"
                android:textColor="#F3F0F0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text='One version of USS Enterprise (NCC-1701-F) appears in the massively multiplayer online role-playing game Star Trek Online. Its design is based on the entry submitted by Adam Ihle for the 2011 "Design the next Enterprise" contest, a joint venture between Cryptic Studios, CBS, and Intel, which ran shortly before the game went "free to play". Enterprise-F made its first appearance in the mission "Boldly They Rode", at the point where USS Enterprise-F appears to help the player defeat the Dominion fleet surrounding Deep Space Nine.'
                android:textColor="#EFEBEB"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>