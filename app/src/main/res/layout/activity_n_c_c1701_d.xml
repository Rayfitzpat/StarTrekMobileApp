<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    tools:context="com.example.startrekassignment.NCC1701D">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uss_enterprise_ncc_1701_d" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NCC-1701-D"
                android:textColor="#F3F0F0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registry: USS Enterprise (NCC-1701-D)"
                android:textColor="#F8F5F5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: Galaxy       Service: 2363–2371 (8 years)"
                android:textColor="#F4F2F2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Captains: Jean-Luc Picard (Patrick Stewart), William T. Riker (Jonathan Frakes), Edward Jellico (Ronny Cox)"
                android:textColor="#F3F0F0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="The main setting of Star Trek: The Next Generation (1987–1994). During Star Trek Generations, Enterprise was lost in 2371 after an attack by the Duras sisters' renegade Klingon Bird-of-Prey which caused extensive damage, leading to a warp core breach. Although the saucer section was safely separated before the breach, the shock wave from the exploding engineering hull threw it out of control, and caused it to crash-land beyond recovery on Veridian III. The ship also appears in the first Deep Space Nine episode &quot;Emissary&quot; and the final Enterprise episode &quot;These Are the Voyages...&quot;"
                android:textColor="#EFEBEB"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>