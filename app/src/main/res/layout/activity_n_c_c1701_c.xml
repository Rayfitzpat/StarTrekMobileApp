<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#020202"
    tools:context="com.example.startrekassignment.NCC1701C">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/uss_enterprise_ncc_1701_c" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NCC-1701-C"
                android:textColor="#F3F0F0"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="USS Enterprise (NCC-1701-C)"
                android:textColor="#F8F5F5" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Class: Ambassador     Service: 2332â€“2344 (12 years)    "
                android:textColor="#F4F2F2" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Captains: Rachel Garrett (Tricia O'Neil)"
                android:textColor="#F3F0F0" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="This ship's first and only appearance is in the Next Generation episode &quot;Yesterday's Enterprise&quot; (1990). It was destroyed attempting to defend the Klingon outpost Narendra III from Romulan attack. Survivors included Tasha Yar (Denise Crosby), whose alternate timeline version from &quot;Yesterday's Enterprise&quot; travels with the ship back in time to the battle over Narendra III. The actions of the Enterprise-C's crew became a catalyst for the alliance between the Federation and the Klingon Empire."
                android:textColor="#EFEBEB"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>